<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Appliedto</th>
    <th>Url</th>
    <th>Status</th>
  </tr>

<% for job in @jobs %>
  <tr>
    <td><%=h job.title %></td>
    <td><%=h job.appliedTo %></td>
    <td><%=h job.url %></td>
    <td><%=h job.status %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New job', new_job_path %>
