<h1>Listing notes</h1>

<table>
  <tr>
    <th>Comment</th>
    <th>Job</th>
  </tr>

<% for notes in @notes %>
  <tr>
    <td><%=h notes.comment %></td>
    <td><%=h notes.job %></td>
    <td><%= link_to 'Show', notes %></td>
    <td><%= link_to 'Edit', edit_notes_path(notes) %></td>
    <td><%= link_to 'Destroy', notes, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New notes', new_notes_path %>
