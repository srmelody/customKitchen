<h1>Editing notes</h1>

<%= error_messages_for :notes %>

<% form_for(@notes) do |f| %>
  <p>
    <b>Comment</b><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    <b>Job</b><br />
    <%= f.text_field :job %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @notes %> |
<%= link_to 'Back', notes_path %>
